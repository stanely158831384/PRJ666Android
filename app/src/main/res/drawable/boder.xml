<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    //这里是Linearlayout布局的背景颜色
    <solid android:color="#ffcb00"/>
    //这里是设置边框线的粗细和颜色
    <stroke
        android:width="10dp"
        android:color="@color/colorPrimary" />

    <padding
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp" />
    //角的话，里边有参数可以单独设置
    <corners android:radius="30dp" />

</shape>